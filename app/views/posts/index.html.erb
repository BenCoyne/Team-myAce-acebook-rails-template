<div class="text-center">
<br>
<% if current_user %>
<b>Welcome <%= current_user.name %>!</b>
<% end %>
<br><br>

<!-- confirming users are signed-up -->
<%= flash.notice %>
<%= link_to new_post_path do %>
  New post
<% end %>
<br><br><br>

<% @posts.each do |post| %>
  <div class="post-box">
    <%# <p><%= link_to post.user.name, posts_show_path %>
    <p><%= link_to 'user#show '%> <%= post.user.name %>, said:</p>
    <p><%= post.created_at.to_date.strftime('%d %b %Y') %></p>
    <p><%= post.message %></p>
    
    <%= link_to "View post", post %>
    <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

</div>